<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_background_border"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_how_to_reg_black_48"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:gravity="center"
                  android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/friend_id_textview"
                android:text="201511****"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/friend_name_textview"
                android:text="김성헌"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/baseline_clear_black_18"
            android:id="@+id/cancel_imgbutton"
    />

</LinearLayout>