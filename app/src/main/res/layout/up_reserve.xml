<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical" >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/reserve_title_linear"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/btn_hide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="hide"
                android:background="#FFFFFF"
                android:src="@drawable/baseline_clear_black_24"
                android:textSize="12dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="8dp"
                  android:paddingTop="8dp"
                  android:textStyle="bold"
                  android:text="예약하기"
                  android:layout_gravity="center"
                  android:gravity="center"/>
    </FrameLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/divider"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#5C3D3B3B"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:background="#E0E0E0">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lower_linear"
                android:background="#E0E0E0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:id="@+id/info1_linear"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="35dp"
                          android:orientation="horizontal"
                          android:gravity="left"
                          android:layout_marginTop="5dp"
                          android:id="@+id/info1_title_linear">
                <ImageView android:layout_width="50dp"
                           android:layout_height="match_parent"
                           android:src="@drawable/green_circle_num1"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="기본 정보"
                          android:gravity="center_vertical"
                          android:textSize="17dp"
                          android:textStyle="bold"
                          android:paddingLeft="5dp"/>
            </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:text="(1) 신청자 정보"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="20dp"
                          android:id="@+id/name_text"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#4BB4B4B4"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="10dp"
                          android:text="(2) 큐브 정보"
                          android:textStyle="bold"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/cube_text"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/cube_info_text"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#4BB4B4B4"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="10dp"
                          android:text="(3) 예약 날짜"
                          android:textStyle="bold"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/date_text"/>

        </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info2_linear"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="35dp"
                              android:orientation="horizontal"
                              android:gravity="left"
                              android:layout_marginTop="5dp"
                              android:id="@+id/info2_title_linear">
                    <ImageView android:layout_width="50dp"
                               android:layout_height="match_parent"
                               android:src="@drawable/green_circle_num2"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="시간 및 목적 선택"
                              android:gravity="center_vertical"
                              android:textSize="17dp"
                              android:textStyle="bold"
                              android:paddingLeft="5dp"/>
                </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="35dp"
                          android:layout_marginTop="10dp"
                          android:id="@+id/from_time_to_time_text"
                          android:textStyle="bold"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="30dp"
                          android:id="@+id/possible_text"
                          android:text="(1) 대여가능 잔여시간"
                          android:textStyle="bold"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#4BB4B4B4"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="10dp"
                          android:text="(2) 시간 선택"
                          android:textStyle="bold"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:padding="10dp"
                          android:text="대여가능 잔여시간이 없습니다."
                          android:visibility="gone"
                          android:id="@+id/impossible_text"
                          android:textSize="13dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/select_time_recycler">
                </androidx.recyclerview.widget.RecyclerView>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#4BB4B4B4"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginTop="10dp"
                          android:text="(3) 이용 목적"
                          android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:id="@+id/select_purpose_recycler">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info3_linear"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="35dp"
                              android:orientation="horizontal"
                              android:gravity="left"
                              android:layout_marginTop="5dp"
                              android:id="@+id/info3_title_linear">
                    <ImageView android:layout_width="50dp"
                               android:layout_height="match_parent"
                               android:src="@drawable/green_circle_num3"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:text="동반 이용자 추가"
                              android:gravity="center_vertical"
                              android:textSize="17dp"
                              android:textStyle="bold"
                              android:paddingLeft="5dp"/>
                </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:id="@+id/user_info_text"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"/>
                <androidx.appcompat.widget.SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/notselected_background_border"
                        app:queryHint="학번을 입력하세요"
                        android:inputType="phone"
                        android:id="@+id/search_friend_view"
                        android:layoutDirection="rtl">
                </androidx.appcompat.widget.SearchView>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:id="@+id/add_friend_recycler"
                                android:padding="5dp">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:background="@drawable/notselected_background_border"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center"
                                android:text="즐겨찾기"/>
                        <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#5C3D3B3B"/>
                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="대여 예약 신청하기"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#036B3F"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/submit_btn"
                    android:gravity="center"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>