<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="0.8"
                  android:background="#036B3F"
               android:textAlignment="center">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/toplogo"
                   android:scaleType="fitXY"
                   android:layout_marginLeft="100dp"
                   android:layout_marginRight="100dp"/>

    </LinearLayout>
    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?android:attr/windowBackground"
            app:itemTextColor="@color/bottom_section_color"
            app:itemIconTint = "@color/bottom_section_color"
            app:labelVisibilityMode="labeled"
            app:menu = "@menu/menu_bottomnavigationview"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/background_webview"
            android:visibility="gone">
    </WebView>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/background_webview2"
            android:visibility="gone">
    </WebView>
</LinearLayout>
