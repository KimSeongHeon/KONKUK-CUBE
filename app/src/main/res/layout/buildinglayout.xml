<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/viewgroup_layout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#F1EBEB"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/building_title_text"
                android:text="건물"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|right"
                   android:id="@+id/up_down_imageview"
                   android:src="@drawable/baseline_keyboard_arrow_down_black_18"/>
    </FrameLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="content"
            android:id="@+id/roomlist_linearlayout"
            android:background="@drawable/make_border"
            android:animateLayoutChanges="true">
        <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/room_recyclerview">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
